@import url('http://fonts.googleapis.com/css?family=Raleway:400,200');
@import 'nib'

global-reset()

white     = #fff
off-white = #eceff1
black     = #263238

cPrimary   = #2196f3
cSecondary = #009688
cAccent    = #ff9800

*
  box-sizing border-box

html
body
  width 100%
  height 100%

body
  background linear-gradient(90deg, cPrimary 10%, cSecondary 90%)
  font-family 'Raleway', sans-serif
  color black

footer
  background black
  color darken(white, 25%)
  display block
  min-height 300px
  padding 24px 12%
  font-size 0.9em
  line-height 1.25em
  clearfix()
  a[href]
    color cAccent
    text-decoration none
  h6
    text-transform uppercase
    font-weight bold
    color darken(white, 45%)
    margin-bottom 12px
    font-size 1.1em
  .footer-about
  .footer-contributers
  .footer-legal
    float left
  .footer-about
    width 45%
  .footer-contributers
    width 30%
    margin 0px 5%
    .contrib-list
      clearfix()
      li
        float left
        margin-right 12px
  .footer-legal
    width 15%


.transition
  transition .3s cubic-bezier(.3, 0, 0, 1.3)

.masthead
  width 100%
  padding 36px 18px
  text-align center
  font-size 3em
  color white
  background rgba(black,0.15)

.pres-list
  display flex
  justify-content center
  flex-wrap wrap

.card-ct
  width 350px
  height 350px
  position relative
  margin 18px

.card
  width 350px
  height 350px
  background off-white
  box-shadow 0px 0px 10px 2px rgba(black,0.3)
  position absolute
  overflow hidden
  z-index 1
  a
    text-decoration none
    color cPrimary
  &:hover
    background white
    height 500px
    z-index 5
    .cta-container
      display inline
      margin-top 430px
    .card_circle
      background-size cover
      border-radius 0
      margin-top -130px
    h2
      background cSecondary
      margin-top 100px
      padding 5px
      small, a
        color #fff
    p
      margin-top 300px
    .tag-list
      opacity 1
  .tag-list
    color #fff
    position absolute
    bottom 230px
    left 0px
    width 100%
    background rgba(black,0.35)
    opacity 0
    li
      float left
      margin 8px 3px
    a
      background cSecondary
      color white
      display inline-block
      padding 3px 5px
      margin-top -3px
      border-radius 4px
  .card_circle
    background url('img/blank.gif') no-repeat center bottom
    background-color cPrimary
    background-size cover
    border-radius 50%
    height 400px
    margin-left -75px
    margin-top -270px
    position absolute
    width 450px

  h2
    font-size 24px
    font-weight 200
    margin-top 150px
    padding 12px
    position absolute
    text-align center
    width 100%
    z-index 3
  h3
    font-size 14px
    font-weight 400
    padding 12px
    position absolute
    bottom -5px
    text-align center
    width 100%
    z-index 3
  p
    color rgba(black,.8)
    font-size 100%
    font-weight normal
    margin-top 200px
    position absolute
    text-align center
    padding 12px
    z-index 3

  .cta-container
    display none
    margin-top 350px
    position absolute
    text-align center
    width 100%
    z-index 3

  .cta
    background-clip padding-box
    border 2px solid cPrimary
    border-radius 2px
    color cPrimary
    display inline-block
    font-size 17px
    font-weight 400
    height 36px
    letter-spacing 0.5px
    line-height 36px
    margin-bottom 15px
    padding 0 2rem
    text-decoration none
    text-transform uppercase
    transition 0.2s ease-out
    &:hover
      background-color cPrimary
      box-shadow 0 8px 17px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19)
      color white

nav.top-nav
  background rgba(white,0.35)
  box-shadow 0, 0, 2px rgba(black,0.5)
  padding 8px 18px
  position static
  top 0px
  left 0px
  height 65px
  img
    height 49px
  ul
    clearfix()
    li
      float left
      a
        height 49px
        display inline-block

@media screen and (max-width: 600px)
	.masthead
    font-size 2em
  footer
    .footer-about
    .footer-contributers
    .footer-legal
      float none
      width 100%
    .footer-contributers
      margin 24px 0px
